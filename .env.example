# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
BASE_URL=http://localhost:3000
API_URL=http://localhost:8080

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
DB_PATH=./data/formera.db
JWT_SECRET=your-secure-secret-here       # CHANGE IN PRODUCTION!
#CORS_ORIGIN=http://localhost:3000       # Optional: Only set if frontend is on different domain

# =============================================================================
# STORAGE
# =============================================================================
# Type: "local" or "s3" (auto-detected if S3 credentials are set)
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./data/uploads
STORAGE_LOCAL_URL=/uploads

# S3 Storage (optional - uncomment to enable)
#S3_BUCKET=your-s3-bucket-name
#S3_REGION=eu-central
#S3_ACCESS_KEY_ID=your-access-key-id
#S3_SECRET_ACCESS_KEY=your-secret-access-key
#S3_ENDPOINT=https://your-s3-endpoint.com
#S3_PREFIX=uploads/
#S3_PRESIGN_MINUTES=60

# Migration (when switching from local to S3)
STORAGE_MIGRATE_ON_START=true
STORAGE_DELETE_AFTER_MIGRATE=false

# =============================================================================
# CLEANUP
# =============================================================================
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_HOURS=24
CLEANUP_MIN_AGE_DAYS=7
CLEANUP_DRY_RUN=false

# =============================================================================
# SEO (optional)
# =============================================================================
PUBLIC_INDEXABLE=true               # Set to "false" to disallow search engine indexing
